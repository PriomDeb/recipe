{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": [
      "ES6",
      "DOM"
    ],
    "rootDir": "src",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    // "types": [
    //   "node"
    // ],
    "typeRoots": [
      "@types"
    ],
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./public/*",
    "node_modules"
  ]
}